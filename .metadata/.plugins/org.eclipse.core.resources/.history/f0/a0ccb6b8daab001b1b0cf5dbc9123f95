package p04.binary;

public class InfinityAndNaNCheckEx {

	public static void main(String[] args) {
		// 정수를 0으로 나누거나 나머지 구할때
		int x = 10;
		int y = 0;

		try {
			int z = x / y;// 몫 구하기
			int k = x % y;// 나머지 구하기
			System.out.println(z);
		} catch (Exception e) {

			System.out.println("컴퓨터는 수학과 다릅니다.숫자를 0으로 나눌수 없습니다.");
		}
		System.out.println("Done");
		System.out.println("-------------------------------");

		double x2 = 5.0;
		double y2 = 0.0;

		try {
			double z2 = x2 / y2;// 몫 구하기
			double k2 = x2 % y2;// 나머지 구하기

			System.out.println("z2 Infinity ::" + Double.isInfinite(z2));
			System.out.println("z2 Infinity ::" + Double.isNaN(z2));
			System.out.println(z2);

			System.out.println("k2 Infinity ::" + Double.isInfinite(k2));
			System.out.println("k2 Infinity ::" + Double.isNaN(k2));
			System.out.println(k2);
		} catch (Exception e) {

			System.out.println("컴퓨터는 수학과 다릅니다.숫자를 0으로 나눌수 없습니다.");
		}

	}

}
